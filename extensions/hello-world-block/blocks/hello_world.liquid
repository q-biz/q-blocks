{{ 'q-blocks-hello-world.css' | asset_url | stylesheet_tag }}

<div class="q-blocks-hello-world" {{ block.shopify_attributes }}>
  <h2 
    style="
      color: {{ block.settings.text_color }};
      font-size: {{ block.settings.font_size }}px;
    "
  >
    {{ block.settings.message }}
  </h2>
</div>

{% schema %}
{
  "name": "Hello World Block",
  "target": "section",
  "templates": ["*"],
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message",
      "default": "Hello World from Q-Blocks!"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#007ace"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 24
    }
  ]
}
{% endschema %}
