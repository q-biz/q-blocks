    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    /* Success State */
    .btn-success {
      background: #10b981 !important;
      color: white !important;
    }
    
    .btn-success .btn-text::after {
      content: ' ‚úì';
    }
    
