{% comment %}
  Hello World Theme App Extension Block
  This block can be added to any section in the theme
{% endcomment %}

<div class="hello-world-block" {{ block.shopify_attributes }}>
  <style>
    .hello-world-block {
      padding: 20px;
      margin: 10px 0;
    }
    
    .hello-world-text {
      color: {{ block.settings.text_color }};
      font-size: {{ block.settings.font_size }}px;
      text-align: {{ block.settings.text_alignment }};
      font-weight: bold;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.4;
    }
    
    .hello-world-container {
      max-width: 100%;
      word-wrap: break-word;
    }
  </style>
  
  <div class="hello-world-container">
    {% if block.settings.message != blank %}
      <p class="hello-world-text">
        {{ block.settings.message }}
      </p>
    {% else %}
      <p class="hello-world-text">
        Hello World!
      </p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hello World",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message",
      "default": "Hello World!"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 48,
      "step": 2,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ]
}
{% endschema %}

