<div class="hello-world-app-block" {{ block.shopify_attributes }}>
  <h2>{{ block.settings.message | default: "Hello World from Q-Blocks!" }}</h2>
</div>

<style>
  .hello-world-app-block {
    padding: 20px;
    background: #f5f5f5;
    border: 1px solid #ddd;
    text-align: center;
    margin: 10px 0;
  }
  .hello-world-app-block h2 {
    color: #333;
    margin: 0;
  }
</style>

{% schema %}
{
  "name": "Hello World Block",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message",
      "default": "Hello World from Q-Blocks!"
    }
  ]
}
{% endschema %}
